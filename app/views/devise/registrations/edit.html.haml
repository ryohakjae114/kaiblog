= title t('.title')
= simple_form_for(resource, url: registration_path(resource_name), html: { method: :put, class: 'mt-3' }) do |f|
  = f.input :name
  = f.input :password
  = f.input :password_confirmation
  = f.input :current_password
  = f.button :submit

= link_to t('devise.registrations.destroy.title'), user_registration_path, data: { turbo_method: :delete }, class: 'btn btn-danger float-end'
